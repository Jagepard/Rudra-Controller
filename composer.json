{
    "name"              : "rudra/controller",
    "description"       : "The Rudra framework",
    "type"              : "library",
    "keywords"          : [
        "rudra",
        "controller",
        "mvc-pattern",
        "mvc"
    ],
    "license"           : "MIT",
    "authors"           : [
        {
            "name"     : "Danila Korotkov (Jagepard)",
            "email"    : "jagepard@yandex.ru",
            "homepage" : "https://jagepard.ru",
            "role"     : "Developer"
        }
    ],
    "support"           : {
        "email" : "jagepard@yandex.ru",
        "skype" : "jagepard.ru"
    },
    "require"           : {
        "php"             : ">=7.1",
        "twig/twig"       : "~1.0",
        "rudra/container" : "self.version",
        "rudra/auth"      : "self.version",
        "rudra/model"     : "self.version",
        "rudra/router"    : "self.version"
    },
    "require-dev"       : {
        "satooshi/php-coveralls" : "dev-master"
    },
    "autoload"          : {
        "psr-4" : {
            "Rudra\\" : "src/"
        }
    },
    "minimum-stability" : "dev",
    "config"            : {
        "optimize-autoloader" : true,
        "prefer-stable"       : true
    }
}
